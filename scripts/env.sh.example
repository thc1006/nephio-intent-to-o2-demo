#!/bin/bash
# Example environment configuration for Gitea GitOps
# Copy this to scripts/env.sh and update with your values

# Required: Your Gitea instance URL
export GITEA_URL="http://localhost:3000"    # Change to your Gitea URL

# Required: Your Gitea personal access token
# Create one at: ${GITEA_URL}/user/settings/applications
export GITEA_TOKEN="YOUR_TOKEN_HERE"        # Replace with actual token

# Optional: Repository configuration (defaults shown)
export EDGE_REPO_NAME="edge1-config"        # Repository name in Gitea
export EDGE_REPO_DIR="/tmp/edge-gitops"     # Local directory for git repo
export EDGE_CLUSTER_NAME="edge-cluster-01"  # Cluster name for GitOps

# Optional: Git user configuration
export GIT_USER_NAME="GitOps Bot"
export GIT_USER_EMAIL="gitops@example.com"