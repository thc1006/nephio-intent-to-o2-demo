{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TMF921 Intent",
  "type": "object",
  "required": ["intentId", "name", "service", "targetSite"],
  "properties": {
    "intentId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string"
    },
    "service": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["eMBB", "URLLC", "mMTC", "generic"]
        },
        "characteristics": {
          "type": "object"
        }
      }
    },
    "targetSite": {
      "type": "string",
      "enum": ["edge1", "edge2", "both"]
    },
    "qos": {
      "type": "object",
      "properties": {
        "dl_mbps": {
          "type": "number",
          "minimum": 0,
          "maximum": 10000
        },
        "ul_mbps": {
          "type": "number",
          "minimum": 0,
          "maximum": 10000
        },
        "latency_ms": {
          "type": "number",
          "minimum": 0,
          "maximum": 1000
        },
        "jitter_ms": {
          "type": "number",
          "minimum": 0
        },
        "packet_loss_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "slice": {
      "type": "object",
      "properties": {
        "sst": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255,
          "description": "Slice/Service Type"
        },
        "sd": {
          "type": ["string", "null"],
          "pattern": "^[0-9A-Fa-f]{6}$",
          "description": "Slice Differentiator"
        },
        "plmn": {
          "type": ["string", "null"],
          "pattern": "^[0-9]{5,6}$",
          "description": "Public Land Mobile Network ID"
        }
      }
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "default": "medium"
    },
    "lifecycle": {
      "type": "string",
      "enum": ["draft", "active", "suspended", "terminated"],
      "default": "draft"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}