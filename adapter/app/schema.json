{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TMF921 Intent",
  "type": "object",
  "required": ["intentId", "name", "parameters", "targetSite"],
  "properties": {
    "intentId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string"
    },
    "targetSite": {
      "type": "string",
      "enum": ["edge1", "edge2", "both"]
    },
    "parameters": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "requirements": {
          "type": "object"
        },
        "configuration": {
          "type": "object"
        }
      }
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "lifecycle": {
      "type": "string",
      "enum": ["draft", "active", "suspended", "terminated"]
    },
    "metadata": {
      "type": "object"
    }
  },
  "additionalProperties": true
}